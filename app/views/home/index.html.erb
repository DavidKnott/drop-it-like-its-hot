<div class= "dropzone">

  <div class = "container row">
    <div class = "col s2">
      <h2><a href="<%= root_path %>" class="brand-logo center">BoxDrop</a></h2>
      <ul>
        <li><a href="#">Recent</a></li>
        <li><a href="#">Files</a></li>
        <li><a href="#">Team</a></li>
        <li><a href="#">Paper</a></li>
        <li><a href="#">Photos</a></li>
      </ul>
    </div>
    <div class = "col s10">
      <table>
        <tr>
          <th>Name</th>
          <th>Modified</th>
        </tr>
    <% @repos.each do |repo| %>
      <% if repo.type == "Folder" %>
        <tr>
          <td><%= link_to repo.aws_url, repo_path(repo) %></td>
          <td><%= repo.updated_at %></td>
          <td>
            <%= link_to download_path(id: repo.id) do %>
              <i class="material-icons">file_download</i>
            <% end %>
          </td>
        </tr>
      <% else %>
        <td><%= repo.aws_url %></td>
        <td><%= repo.updated_at %></td>
        <td>
          <%= link_to download_path(id: repo.id) do %>
            <i class="material-icons">file_download</i>
          <% end %>
        </td>
      <% end %>
    </table>
    <% end %>
    </div>
  </div>
<div class="searchResults" data-query="<%= @s3_direct_post.url %>"></div>
<%= form_for(@repo, :url => repos_path(current_user), :method => 'post', html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>

    <%= f.label :aws_url %>
    <%= f.file_field :aws_url %>

    <%= f.submit %>
  <% end %>
</div>