<div class= "dropzone">

  <div class = "container row">
    <div class = "col s2">
      <h2><a href="<%= root_path %>" class="brand-logo center">BoxDrop</a></h2>
      <ul>
        <li><a href="#">Recent</a></li>
        <li><a href="#">Files</a></li>
        <li><a href="#">Team</a></li>
        <li><a href="#">Paper</a></li>
        <li><a href="#">Photos</a></li>
      </ul>
    </div>
    <div class = "col s10">
      <div class = "repo-navbar right-align col s6 offset-s2">
        <ul class = "inline-list">
          <li>
            <%= link_to "#file-upload", class: "modal-trigger file-upload-trigger waves-effect waves-light" do %>
              <i class="material-icons">file_upload</i>
            <% end %>
          </li>
          <li><i class="material-icons">create_new_folder</i></li>
        </ul>
      </div>
      <table>
        <tr>
          <th>Name</th>
          <th>Modified</th>
        </tr>
    <% @repos.each do |repo| %>
      <% if repo.type == "Folder" %>
        <tr>
          <td><%= link_to repo.aws_url, repo_path(repo) %></td>
          <td><%= repo.updated_at %></td>
          <td>
            <%= link_to download_path(id: repo.id) do %>
              <i class="material-icons">file_download</i>
            <% end %>
          </td>
        </tr>
      <% else %>
        <td><%= repo.aws_url %></td>
        <td><%= repo.updated_at %></td>
        <td>
          <%= link_to download_path(id: repo.id) do %>
            <i class="material-icons">file_download</i>
          <% end %>
        </td>
      <% end %>
    </table>
    <% end %>
    </div>
  </div>

<%= render partial: "/layouts/file_upload" %>